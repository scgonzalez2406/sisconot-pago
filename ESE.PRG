CLOSE DATA
SET TALK OFF
SET CENTURY ON
SELECT 1
USE REGPAGOS
SELECT 2
USE MP011998
SELECT 3
USE MP021998

LI=1
MCED=SPACE(12)
SALDO=0.00
MRECIBO=0
MMONTO=0.00
MFECHA=DATE()
DIA=DTOS({01/09/1999})
SELECT 1
SET ORDER TO FECHAPAGO
SEEK DIA
BROWSE
SET DEVI TO PRINT

DO WHILE .NOT. EOF()
   IF TRANSA='AT' .AND. RECIBO<37000
      MCED=CEDULA
      MRECIBO=RECIBO
      MMONTO=MONTO 
      MFECHA=FECHA_PAGO
      SELECT 2
      SET ORDER TO TAG CED
      IF SEEK (MCED)
         SALDO=TOTAL_DEUD-MONTO_PAGA
         IF SALDO>0
            @LI,01 SAY MRECIBO
            @LI,13 SAY MCED 
            @LI,22 SAY MMONTO 
            @LI,38 SAY MFECHA
            @LI,47 SAY SALDO
            @LI,62 SAY '01'
            LI=LI+1
         ENDIF         
      ENDIF
      SELECT 3
      SET ORDER TO TAG CED
      IF SEEK (MCED)
         SALDO=TOTAL_DEUD-MONTO_PAGA
         LAPSO='021998'
         IF SALDO>0
            @LI,01 SAY MRECIBO
            @LI,13 SAY MCED 
            @LI,22 SAY MMONTO 
            @LI,38 SAY MFECHA
            @LI,47 SAY SALDO
            @LI,62 SAY '02'
            LI=LI+1
         ENDIF         
      ENDIF
   ENDIF
   SELECT 1
   SKIP   
ENDDO 
SET DEVI TO SCREEN
RETURN